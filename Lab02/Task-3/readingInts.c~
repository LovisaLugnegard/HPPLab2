#include <stdio.h>

int a, b, c;

main(){
  printf("\nEnter two integers ");
  scanf("%d %d", &a, &b);
  printf("\n a = %d b = %d ", a, b);
  
  if(a%2 || b%2){
    c = a * b;
    printf("\n The product of %d and %d is %d. ", a, b, c);   
  }
  else{
    c = a + b;
    printf("\n The sum of %d and %d is %d. ", a, b, c);  
  }
}
